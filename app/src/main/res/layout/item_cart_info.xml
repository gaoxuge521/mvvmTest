<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.mvvmhabit.jiemai.crad.CartInfoItemViewModel"/>
        <variable
            name="viewModel"
            type="CartInfoItemViewModel" />
    </data>
    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            binding:onClickCommand="@{viewModel.onItemClick}"
            binding:imgSelect="@{viewModel.entityField.active}"
            android:id="@+id/iv_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_select_pre"/>

        <android.support.v7.widget.CardView
            binding:cardPreventCornerOverlap="true"
            binding:cardUseCompatPadding="true"
            binding:cardElevation="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                binding:onClickCommand="@{viewModel.onitemClick}"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    binding:placeholderRes="@drawable/img_default"
                    android:layout_marginRight="10dp"
                    android:src="@{viewModel.drawable}"
                    binding:url = "@{viewModel.entityField.main_image}"
                    android:id="@+id/iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@{viewModel.entityField.name}"
                    android:id="@+id/tv_name"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    tools:text="广合年轮蛋糕提拉米苏"/>
                <TextView
                    android:text="@{@string/specification+viewModel.entityField.spuAttrStr}"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_name"
                    android:id="@+id/tv_spuAttrStr"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorHint"
                    android:layout_marginLeft="1dp"
                    android:textSize="13sp"
                    tools:text="规格"/>
                <TextView
                    android:layout_toLeftOf="@+id/anim_btn"
                    android:text="@{@string/price+viewModel.entityField.price}"
                    android:layout_alignBottom="@+id/iv"
                    android:id="@+id/tv_price"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_price"
                    android:textSize="14sp"
                    />

                <com.goldze.mvvmhabit.animshopbutton.AnimShopButtonUi
                    android:id="@+id/anim_btn"
                    android:layout_alignBottom="@+id/iv"
                    android:layout_alignParentRight="true"
                    binding:onAddClickCommend="@{viewModel.onAddClickCommend}"
                    binding:onTextClickCommend="@{viewModel.onTextClickCommend}"
                    binding:onDeleteClickCommend="@{viewModel.onDeleteClickCommend}"
                    binding:onCountAddSuccess="@{viewModel.onCountAddSuccess}"
                    binding:onCountDelSuccess="@{viewModel.onCountDelSuccess}"
                    binding:onCount="@{viewModel.onTextChange}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    binding:addEnableBgColor="@color/c_FE7A00"
                    binding:addEnableFgColor="#ffffff"
                    binding:delEnableBgColor="@color/c_FE7A00"
                    binding:delEnableFgColor="@color/c_FE7A00"
                    binding:hintBgColor="@color/c_FE7A00"
                    binding:hintBgRoundValue="15dp"
                    binding:hintFgColor="#ffffff"
                    binding:maxCount="99"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
   
</layout>
